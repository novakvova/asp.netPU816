@model IEnumerable<Bicycle.Web.Models.CategoryVM>

@{
    ViewBag.Title = "Категорії";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h2>Списко категорій</h2>

<p>
    @Html.ActionLink("Додати категорію", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrlLink)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <img src="@item.UrlLink" alt="@item.Name" width="150" />
        </td>
        <td>
            @Html.ActionLink("Редагувати", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Деталі", "Details", new { id=item.Id }) |
            @Html.ActionLink("Видалити", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
