@model List<Bicycle.Web.Models.ProductVM>
@{
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h1>Товари</h1>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Назва</th>
                    <th scope="col">Кількість</th>
                    <th scope="col">Ціна</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Quantity</td>
                        <td>@product.Price</td>
                    </tr>
                }

            </tbody>
        </table>


    </div>

</div>