@model IEnumerable<Bicycle.Web.Models.AnimalVM>

@{
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h2>Список тварин з БД</h2>
<a href="@Url.Action("Create")" class="btn btn-success">Додати тварину</a>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model=>model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @item.Name
        </td>
        <td>
            <img src="@item.ImageUrl" alt="Alternate Text" width="150" />
        </td>
    </tr>
}
</table>
