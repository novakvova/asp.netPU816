@model Bicycle.Web.Models.AnimalAddVM
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h2>Додати нову тварину</h2>
<form action="@Url.Action("Create", "Animals")" method="post">
    <div class="form-group">
        @Html.LabelFor(a => a.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder="Кабан" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ImageUrl)
        @Html.TextBoxFor(model => model.ImageUrl, new { @class = "form-control" })
    </div>

    <input type="submit" value="Додати тварину" />
</form>

